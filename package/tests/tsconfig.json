{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noEmit": true,
    "paths": {
      "kavi/*": ["../src/*"],
      "kavi": ["../src/index"],
      "kavi/server": ["../src/server/index"],
      "kavi/server/*": ["../src/server/*"],
      "kavi/client": ["../src/client/index"],
      "kavi/client/*": ["../src/client/*"]
    }
  },
  "include": ["unit/**/*.ts"],
  "files": ["../src/app.d.ts"]
}
